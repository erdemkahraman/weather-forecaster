<!DOCTYPE html>

<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">

    <link rel="stylesheet" href="style.css">
    <title>Weather Conditions</title>

    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://www.gstatic.com/firebasejs/8.8.1/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.8.1/firebase-database.js"></script>

     <meta name="viewport" content="width=device-width, initial-scale=1.0">
   </head>
<body>
  <div class="sidebar">
    <div class="logo-details">
      <i class='bx bxs-cloud'></i>
        <div class="logo_name">Weather Data Acquisition System</div>
        <i class='bx bx-menu' id="btn" ></i>
    </div>
    <ul class="nav-list">
      <li>
        <a href="index.html">
          <i class='bx bx-cloud'></i>
          <span class="links_name">Weather Conditions</span>
        </a>
         <span class="tooltip">Weather Conditions</span>
      </li>
     <li>
       <a href="map.html">
         <i class='bx bx-current-location' ></i>
         <span class="links_name">Gps Waypoint</span>
       </a>
       <span class="tooltip">Gps Waypoint</span>
     </li>
    </ul>
  </div>
  <section class="home-section">
    <header>
      <div class="text">Weather Conditions</div>

    </header>
    <main>
 
    <div class="index-box">
      <h3>Temperature (Celcius): <output id="temp"></output>  &deg;C</h3>
    </div>
    <div class="index-box">
        <h3>Pressure (mBar): <output id="pres"></output></h3>
    </div>
    <div class="index-box">
        <h3>Altitude (meter): <output id="alt"></output></h3>
    </div>
    <div class="index-box">
        <h3>Humidity: % <output id="hum"></output></h3>
    </div>
    <div class="index-box">
        <h3>Latitude: <output id="lat"></output></h3>
    </div>
    <div class="index-box">
        <h3>Longtitude: <output id="lng"></output></h3>
    </div>
    <div class="time">
      <style>
        body {
          font-family: "Work Sans", sans-serif;
          background: #193a5c;
         
      }
      .time {
          margin-left: 50px;
          margin-top: 50px;
          display: inline-block;
          width: 500px;   
          background: #E4F9F7;
          color: rgb(151, 49, 49);
          text-align: center;
          border: 7px transparent rgb(12, 12, 12);
          border-radius: 50px;
          padding: 8px;
          box-shadow: 0 2px 10px 0 rgba(0,0,0,0.16), 0 2px 10px 0 
          rgba(0,0,0,0.12);
      }
      .hms {
        font-size: 68pt;
        font-weight: 200;
       }
     .ampm {
        font-size: 22pt;
      }
      .date {
        font-size: 15pt;
      }
      </style>
      <span class="hms"></span>
          <span class="ampm"></span>
           <br>
          <span class="date"></span>
      <script src="datetime.js"></script>
    </div>
    <img id="img" src="">

    </main>
    
    <script src="firebase_weather.js"></script>
    
  </section>
  <script src="script.js"></script>
</body>
</html>
